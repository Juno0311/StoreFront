@model IEnumerable<StoreFront.DATA.EF.Models.OrderProduct>

@{
    ViewData["Title"] = "Index";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Ordered Products</h1>
            <p>
                <a class="products-link" asp-action="Create">Create New Order</a>
            </p>
        </div>
    </div>
</header>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.ShipCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductName)
                </td>
                <td>
                    <a class="products-link" asp-action="Edit" asp-route-id="@item.OrderProductId">Edit</a> |
                    <a class="products-link" asp-action="Details" asp-route-id="@item.OrderProductId">Details</a> |
                    <a class="products-link" asp-action="Delete" asp-route-id="@item.OrderProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
