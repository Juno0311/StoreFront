@model StoreFront.DATA.EF.Models.OrderProduct

@{
    ViewData["Title"] = "Delete";
}
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Delete Order Product</h1>
            <p class="lead fw-normal text-white-50 mb-0">Are you sure you want to delete this?</p>
            <p><a class="products-link" asp-action="Index">Back to List</a></p>
        </div>
    </div>
</header>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.ShipCity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        
    </form>
</div>
